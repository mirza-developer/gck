@using Gck.Components
@inherits LayoutComponentBase
@inject IJSRuntime JS

<div class="page">
    <nav class="navbar">
        <div class="nav-container">
            <a href="/" class="logo">
                <i class="fas fa-gamepad"></i>
                گیم سنتر کوثر
            </a>
            
            <ul class="nav-menu">
                <li><a href="/" class="nav-link">خانه</a></li>
                <li><a href="/games" class="nav-link">بازی‌ها</a></li>
            </ul>
            
            <button class="mobile-menu-toggle">
                <i class="fas fa-bars"></i>
            </button>
        </div>
    </nav>

    <main class="main-content">
        @Body
    </main>

    <footer class="footer">
        <div class="container">
            <div class="footer-content">
                <div class="footer-section">
                    <h3>گیم سنتر کوثر</h3>
                    <p>بهترین تجربه گیمینگ با جدیدترین بازی‌های روز دنیا</p>
                    <div class="social-links">
                        <a href="https://instagram.com/kowsar_gc" class="social-link"><i class="fab fa-instagram"></i></a>
                        <a href="https://t.me/kowsar_gc" class="social-link"><i class="fab fa-telegram"></i></a>
                    </div>
                </div>
                <div class="footer-section">
                    <h4>دسته‌بندی بازی‌ها</h4>
                    <ul class="footer-links">
                        <li>اکشن</li>
                        <li>ورزشی</li>
                        <li>مسابقه‌ای</li>
                    </ul>
                </div>
                <div class="footer-section">
                    <h4>پشتیبانی</h4>
                    <ul class="footer-links">
                        <li><a href="/help">راهنما</a></li>
                        <li><a href="/contact">تماس با ما</a></li>
                    </ul>
                </div>
                <div class="footer-section">
                    <h4>موقعیت ما روی نقشه</h4>
                    <div id="footer-map" style="width:100%;height:220px;border-radius:16px;overflow:hidden;"></div>
                </div>
            </div>
            
            <div class="footer-bottom">
                <p>&copy; ۱۴۰۴ گیم سنتر کوثر. تمامی حقوق محفوظ است.</p>
            </div>
        </div>
    </footer>
</div>

@code {
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JS.InvokeVoidAsync("initFooterMap");
        }
    }
}
