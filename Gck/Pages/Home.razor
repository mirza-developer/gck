@page "/"
@using Gck.Components

<SeoHead Title="مرکز بازی‌های Gck - کافه گیمینگ PS5"
         Description="بهترین مرکز بازی‌های PS5 با فضای مدرن و امن. بازی‌های محبوب FC25، eFootball، Mortal Kombat، Forza و Red Dead Redemption در دسترس"
         Keywords="کافه گیمینگ, PS5, FC25, eFootball, مورتال کمبت, فورزا, رد دد, مرکز بازی"
         Url="https://gckgames.ir" />

<!-- Hero Section -->
<section class="hero">
    <div class="container">
        <div class="hero-content fade-in-up">
            <h1 class="hero-title glow-pulse">
                🎮 مرکز بازی‌های Gck
            </h1>
            <p class="hero-subtitle">
                تجربه‌ای فوق‌العاده از بازی‌های PS5 در فضایی مدرن، امن و راحت
                <br>
                جدیدترین بازی‌های روز دنیا در کیفیت 4K منتظر شماست!
            </p>
            <div class="hero-buttons">
                <a href="#games" class="btn-gaming">
                    <i class="fas fa-gamepad"></i>
                    مشاهده بازی‌ها
                </a>
                <a href="#contact" class="btn-gaming btn-secondary">
                    <i class="fas fa-map-marker-alt"></i>
                    آدرس و تماس
                </a>
            </div>
        </div>
    </div>
</section>

<!-- Stats Section -->
<section class="section">
    <div class="container">
        <div class="stats-grid">
            <div class="stat-card fade-in-up">
                <div class="stat-label">کنسول PS5</div>
            </div>
            <div class="stat-card fade-in-up">
                <div class="stat-label">بازی های محبوب</div>
            </div>
            <div class="stat-card fade-in-up">
                <span class="stat-number"></span>
                <div class="stat-label">محیط امن</div>
            </div>
            <div class="stat-card fade-in-up">
                <span class="stat-number"></span>
                <div class="stat-label">لیگ های دوره ای</div>
            </div>
        </div>
    </div>
</section>
<section class="section" id="games">
    <div class="container">
        <h2 class="section-title">🔥 بازی‌های محبوب PS5</h2>
        
        <div class="games-grid">
            <div class="game-card fade-in-up">
                <div class="game-image">
                    <i class="fas fa-futbol"></i>
                </div>
                <div class="game-content">
                    <h3 class="game-title">FC25</h3>
                    <p class="game-description">
                        جدیدترین نسخه فوتبال EA Sports با گرافیک بی‌نظیر و حالت‌های جدید بازی
                    </p>
                    <div class="game-tags">
                        <span class="tag">ورزشی</span>
                        <span class="tag">چندنفره</span>
                        <span class="tag">محبوب</span>
                    </div>
                </div>
            </div>

            <div class="game-card fade-in-up">
                <div class="game-image" style="background: var(--gradient-3);">
                    <i class="fas fa-running"></i>
                </div>
                <div class="game-content">
                    <h3 class="game-title">eFootball</h3>
                    <p class="game-description">
                        فوتبال کونامی با فیزیک واقعی و تیم‌های معتبر جهان
                    </p>
                    <div class="game-tags">
                        <span class="tag">ورزشی</span>
                        <span class="tag">چندنفره</span>
                        <span class="tag">محبوب</span>
                    </div>
                </div>
            </div>

            <div class="game-card fade-in-up">
                <div class="game-image" style="background: var(--gradient-2);">
                    <i class="fas fa-fist-raised"></i>
                </div>
                <div class="game-content">
                    <h3 class="game-title">Mortal Kombat</h3>
                    <p class="game-description">
                        جدیدترین نسخه مورتال کمبت با گرافیک خیره‌کننده و مبارزات حماسی
                    </p>
                    <div class="game-tags">
                        <span class="tag">مبارزه‌ای</span>
                        <span class="tag">اکشن</span>
                        <span class="tag">هیجانی</span>
                    </div>
                </div>
            </div>

            <div class="game-card fade-in-up">
                <div class="game-image" style="background: var(--gradient-1);">
                    <i class="fas fa-car"></i>
                </div>
                <div class="game-content">
                    <h3 class="game-title">Forza Horizon 5</h3>
                    <p class="game-description">
                        بهترین بازی مسابقه‌ای جهان با ماشین‌های فوق‌العاده و مسیرهای متنوع
                    </p>
                    <div class="game-tags">
                        <span class="tag">شبیه‌سازی</span>
                        <span class="tag">آزاد</span>
                    </div>
                </div>
            </div>

            <div class="game-card fade-in-up">
                <div class="game-image" style="background: var(--gradient-3);">
                    <i class="fas fa-horse"></i>
                </div>
                <div class="game-content">
                    <h3 class="game-title">Red Dead Redemption 2</h3>
                    <p class="game-description">
                        شاهکار راکستار گیمز در دنیای وسترن با داستان فوق‌العاده
                    </p>
                    <div class="game-tags">
                        <span class="tag">ماجراجویی</span>
                        <span class="tag">اکشن</span>
                        <span class="tag">داستانی</span>
                    </div>
                </div>
            </div>

            <div class="game-card fade-in-up">
                <div class="game-image" style="background: var(--gradient-2);">
                    <i class="fas fa-gamepad"></i>
                </div>
                <div class="game-content">
                    <h3 class="game-title">بازی‌های بیشتر</h3>
                    <p class="game-description">
                        مجموعه کاملی از بهترین بازی‌های PS5 در انتظار شماست
                    </p>
                    <div class="game-tags">
                        <span class="tag">متنوع</span>
                        <span class="tag">جدید</span>
                        <span class="tag">کیفیت 4K</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="section">
    <div class="container">
        <h2 class="section-title">🌟 امکانات مرکز</h2>
        
        <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); gap: 2rem;">
            <div class="gaming-card fade-in-up">
                <h3 style="color: var(--accent-cyan); margin-bottom: 1rem;">
                    <i class="fas fa-shield-alt"></i>
                    فضای امن و آرام
                </h3>
                <p style="color: var(--text-secondary); margin-bottom: 1.5rem;">
                    محیطی امن، تمیز و مناسب برای همه سنین 
                </p>
                <ul style="list-style: none; color: var(--text-secondary);">
                    <li style="margin-bottom: 0.5rem;">
                        <i class="fas fa-check" style="color: var(--accent-cyan); margin-left: 0.5rem;"></i>
                        نظافت و بهداشت کامل
                    </li>
                    <li style="margin-bottom: 0.5rem;">
                        <i class="fas fa-check" style="color: var(--accent-cyan); margin-left: 0.5rem;"></i>
                        تهویه هوای مناسب
                    </li>
                    <li style="margin-bottom: 0.5rem;">
                        <i class="fas fa-check" style="color: var(--accent-cyan); margin-left: 0.5rem;"></i>
                        صندلی‌های راحت 
                    </li>
                </ul>
            </div>
            <div class="gaming-card fade-in-up">
                <h3 style="color: var(--secondary-pink); margin-bottom: 1rem;">
                    <i class="fas fa-tv"></i>
                    تجهیزات پیشرفته
                </h3>
                <p style="color: var(--text-secondary); margin-bottom: 1.5rem;">
                    جدیدترین کنسول‌های PS5 با تلویزیون‌های 4K و صدای فوق‌العاده
                </p>
                <ul style="list-style: none; color: var(--text-secondary);">
                    <li style="margin-bottom: 0.5rem;">
                        <i class="fas fa-check" style="color: var(--secondary-pink); margin-left: 0.5rem;"></i>
                        کنسول‌های PS5 اورجینال
                    </li>
                    <li style="margin-bottom: 0.5rem;">
                        <i class="fas fa-check" style="color: var(--secondary-pink); margin-left: 0.5rem;"></i>
                        تلویزیون‌های 4K HDR و بزرگ
                    </li>
                </ul>
            </div>
            <div class="gaming-card fade-in-up">
                <h3 style="color: var(--accent-yellow); margin-bottom: 1rem;">
                    <i class="fas fa-coffee"></i>
                    خدمات جانبی
                </h3>
                <p style="color: var(--text-secondary); margin-bottom: 1.5rem;">
                    نوشیدنی‌ها و تنقلات متنوع برای تجربه‌ای کامل
                </p>
                <ul style="list-style: none; color: var(--text-secondary);">
                    <li style="margin-bottom: 0.5rem;">
                        <i class="fas fa-check" style="color: var(--accent-yellow); margin-left: 0.5rem;"></i>
                        نوشیدنی‌های سرد و گرم
                    </li>
                    <li style="margin-bottom: 0.5rem;">
                        <i class="fas fa-check" style="color: var(--accent-yellow); margin-left: 0.5rem;"></i>
                        تنقلات و شیرینی
                    </li>
                </ul>
            </div>
        </div>
    </div>
</section>
<section class="section">
    <div class="container">
        <h2 class="section-title">💰 قیمت‌ها و پکیج‌ها</h2>
        <div class="gaming-card fade-in-up" style="max-width: 600px; margin: 0 auto;">
            <div style="text-align: center; margin-bottom: 2rem;">
                <h3 style="color: var(--primary-purple); margin-bottom: 1rem;">تعرفه ساعتی بر اساس تعداد دسته</h3>
